version: '3.8'

services:
  # MySQL Database
  database:
    image: mysql:8.0
    container_name: southdelhirealty-db
    restart: unless-stopped
    environment:
      MYSQL_DATABASE: southdel_main
      MYSQL_USER: southdel_main
      MYSQL_PASSWORD: secure_password_123
      MYSQL_ROOT_PASSWORD: root_secure_password_456
    ports:
      - "3306:3306"
    volumes:
      - mysql_data:/var/lib/mysql
      - ./docker-init.sql:/docker-entrypoint-initdb.d/01-init.sql
      - ./migrations:/docker-entrypoint-initdb.d/migrations
    networks:
      - southdelhirealty-network
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 60s
    command: --default-authentication-plugin=mysql_native_password

  # South Delhi Realty Application
  app:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: southdelhirealty-app
    restart: unless-stopped
    depends_on:
      database:
        condition: service_healthy
    ports:
      - "7822:7822"
    environment:
      # Database Configuration (using containerized database)
      - DB_HOST=s4.wexron.in
      - DB_USER=southdel_main
      - DB_PASSWORD=2beeAV5hjamzY7MFzNtN
      - DB_NAME=southdel_main
      - DB_PORT=3306
      
      # Server Configuration
      - NODE_ENV=production
      - PORT=7822
      - LOG_LEVEL=info
      - SESSION_SECRET=${SESSION_SECRET}
      
      # Client Configuration
      - CLIENT_URL=${CLIENT_URL}
      - ALLOWED_ORIGINS=http://localhost:7822,http://127.0.0.1:7822,http://localhost:5000,http://127.0.0.1:5000,https://southdelhirealty.com,http://app:7822
      
      # Cloudinary Configuration
      - CLOUDINARY_CLOUD_NAME=${CLOUDINARY_CLOUD_NAME}
      - CLOUDINARY_API_KEY=${CLOUDINARY_API_KEY}
      - CLOUDINARY_API_SECRET=${CLOUDINARY_API_SECRET}
      
      # Google OAuth Configuration
      - GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
      - GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}
      - GOOGLE_CALLBACK_URL=${GOOGLE_CALLBACK_URL}
      
      # Email Configuration
      - EMAIL_HOST=${EMAIL_HOST}
      - EMAIL_PORT=${EMAIL_PORT}
      - EMAIL_SECURE=${EMAIL_SECURE}
      - EMAIL_USER=${EMAIL_USER}
      - EMAIL_PASS=${EMAIL_PASS}
      - EMAIL_FROM=${EMAIL_FROM}
      
      # Session Configuration
      - SESSION_STORE_TYPE=database
      - SESSION_MAX_AGE=86400000
      - SESSION_SECURE_COOKIES=false
      - SSL_ENABLED=false
    volumes:
      - ./uploads:/app/uploads
      - ./logs:/app/logs
    networks:
      - southdelhirealty-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:7822/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 120s
    deploy:
      resources:
        limits:
          memory: 1G
          cpus: '0.8'
        reservations:
          memory: 512M
          cpus: '0.4'

  # Optional: phpMyAdmin for database management
  phpmyadmin:
    image: phpmyadmin/phpmyadmin:latest
    container_name: southdelhirealty-phpmyadmin
    restart: unless-stopped
    depends_on:
      - database
    ports:
      - "8080:80"
    environment:
      PMA_HOST: database
      PMA_PORT: 3306
      PMA_USER: root
      PMA_PASSWORD: root_secure_password_456
      MYSQL_ROOT_PASSWORD: root_secure_password_456
    networks:
      - southdelhirealty-network

volumes:
  mysql_data:
    driver: local

networks:
  southdelhirealty-network:
    driver: bridge
    ipam:
      config:
        - subnet: 172.20.0.0/16